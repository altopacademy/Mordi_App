<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OtpActivity">

    <TextView
        android:id="@+id/tv1"
        style="@style/TextBoldLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="100dp"
        android:text="Masukkan Kode OTP"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        style="@style/TextNormalNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:text="Kami telah mengirimkan kata sandi sekali pakai ke ponsel Anda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/tvResend"
        style="@style/TextBoldSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Kirim lagi"
        android:textColor="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <LinearLayout
        android:id="@+id/llNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResend">

        <EditText
            android:id="@+id/et1"
            style="@style/TextBoldLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_stroke_chat"
            android:inputType="number"
            android:maxLength="1"
            android:hint="-"
            android:padding="20dp" />

        <EditText
            android:id="@+id/et2"
            style="@style/TextBoldLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/round_stroke_chat"
            android:inputType="number"
            android:maxLength="1"
            android:hint="-"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />

        <EditText
            android:id="@+id/et3"
            style="@style/TextBoldLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/round_stroke_chat"
            android:inputType="number"
            android:hint="-"
            android:maxLength="1"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />

        <EditText
            android:id="@+id/et4"
            style="@style/TextBoldLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="-"
            android:layout_marginEnd="4dp"
            android:background="@drawable/round_stroke_chat"
            android:inputType="number"
            android:maxLength="1"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />

        <EditText
            android:id="@+id/et5"
            style="@style/TextBoldLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:hint="-"
            android:background="@drawable/round_stroke_chat"
            android:inputType="number"
            android:maxLength="1"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />

        <EditText
            android:id="@+id/et6"
            style="@style/TextBoldLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_stroke_chat"
            android:hint="-"
            android:inputType="number"
            android:maxLength="1"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTimer"
        style="@style/TextNormalSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Tidak menerima OTP? Kirim lagi"
        android:textColor="@color/hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llNum" />

    <Button
        android:id="@+id/btVerif"
        style="@style/TextBoldNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_solid_primary"
        android:text="Verifikasi"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvTimer" />

</androidx.constraintlayout.widget.ConstraintLayout>