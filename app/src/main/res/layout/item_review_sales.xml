<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUserName"
                    style="@style/TextBoldNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Astungkara Baskara" />

                <RatingBar
                    android:id="@+id/ratingUser"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="4dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:stepSize="1"
                    android:visibility="visible"
                    android:progressTint="#FFC74D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDateReview"
                style="@style/TextNormalNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Desember 2020"
                android:textColor="@color/hint" />

            <TextView
                android:id="@+id/tvNotes"
                style="@style/TextNormalNormal"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Pelayanan sangat baik, ketika saya membeli paket data lalu ada masalah. mbaknya menerangkan dengan sangat baik dengan bahasa yang mudah dipahami." />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>