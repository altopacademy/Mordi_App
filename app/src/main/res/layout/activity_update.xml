<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.UpdateActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:src="@drawable/ic_icon_imost" />

    <TextView
        style="@style/TextBoldLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="Ada Pembaruan Sistem" />

    <TextView
        style="@style/TextNormalNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        android:layout_marginBottom="48dp"
        android:gravity="center_horizontal"
        android:text="Yuk, Update Aplikasi kamu untuk menikmati fitur terbaru" />

    <Button
        android:id="@+id/updateid"
        style="@style/TextBoldNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/round_solid_yellow"
        android:text="Perbarui Aplikasi"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>