<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_top_white"
    android:orientation="vertical">

    <View
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:background="@color/hint" />

    <LinearLayout
        android:id="@+id/llDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            style="@style/TextBoldNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terimakasih atas tanggapanya" />

        <TextView
            style="@style/TextNormalNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:text="Kami mohon maaf bila ada yang kurang berkesan\nTanggapan anda sangat membantu kami meningkatkan pelayanan kami."
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextBoldNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Beri Rating Untuk Sales" />

        <TextView
            style="@style/TextNormalNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Penilaian anda sangat membantu kami" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:numStars="5"
            android:progressTint="#FFC74D"
            android:stepSize="1" />

        <EditText
            android:id="@+id/etInput"
            style="@style/TextNormalNormal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            android:background="@drawable/round_stroke_chat"
            android:gravity="start"
            android:hint="Tulis komentar"
            android:maxLength="320"
            android:maxLines="5"
            android:padding="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btOK"
        style="@style/TextBoldNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/holo_orange_light"
        android:text="Kirim"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>