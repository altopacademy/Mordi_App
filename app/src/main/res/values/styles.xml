<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreenDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="FontChat">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="fontFamily">@font/font_chat</item>
        <item name="android:fontFamily">@font/font_chat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="TextBoldSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="TextBoldNormal">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="TextBoldLarge">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="TextNormalSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="TextNormalNormal">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="StyleSelected">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="StyleUnselected">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

</resources>